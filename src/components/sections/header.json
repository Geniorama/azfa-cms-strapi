      "default": "/"
    },
    "tagline": {
      "type": "string"
    },
    "mainMenu": {
      "type": "component",
      "repeatable": true,
      "component": "components.menu-item"
    },
    "languageSelector": {
      "type": "boolean",
      "default": true
    },
    "availableLanguages": {
      "type": "component",
      "repeatable": true,
      "component": "components.button-link"
    },
    "stickyHeader": {
      "type": "boolean",
      "default": true
    },
    "backgroundColor": {
      "type": "string",
      "default": "#ffffff"
