{
  "kind": "collectionType",
  "collectionName": "team_sections",
  "info": {
    "singularName": "team-section",
    "pluralName": "team-sections",
    "displayName": "Team Section",
    "description": "Team sections: Board of Directors, Committees and AZFA Team"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "sectionType": {
      "type": "enumeration",
      "enum": [
        "board-of-directors",
        "committees",
        "azfa-team"
      ],
      "required": true
    },
    "leader": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::team-member.team-member"
    },
    "members": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::team-member.team-member"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
