{
  "kind": "collectionType",
  "collectionName": "affiliates",
  "info": {
    "singularName": "affiliate",
    "pluralName": "affiliates",
    "displayName": "Affiliate"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "country": {
      "type": "customField",
      "customField": "plugin::country-select.country"
    },
    "city": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "organizacion",
        "empresa",
        "zonaFranca"
      ]
    },
    "contactInfo": {
      "type": "component",
      "component": "sections.contact",
      "repeatable": false
    },
    "mapLocation": {
      "type": "component",
      "component": "components.gm-location",
      "repeatable": true
    },
    "users": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "affiliateCompany"
    },
    "realStateOffers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::real-state-offer.real-state-offer",
      "mappedBy": "affiliateCompany"
    },
    "propertiesLimit": {
      "type": "integer",
      "required": true,
      "default": 5
    }
  }
}
