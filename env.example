# Configuración de la base de datos RDS
DATABASE_CLIENT=postgres
DATABASE_HOST=tu-instancia-rds.region.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=tu-contraseña-segura
DATABASE_SSL=true
DATABASE_SCHEMA=public

# Configuración de Strapi
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Claves de aplicación (generar con: openssl rand -base64 32)
APP_KEYS=clave1,clave2,clave3,clave4

# JWT (generar con: openssl rand -base64 32)
JWT_SECRET=tu-jwt-secret

# API Token (generar con: openssl rand -base64 32)
API_TOKEN_SALT=tu-api-token-salt

# Admin JWT (generar con: openssl rand -base64 32)
ADMIN_JWT_SECRET=tu-admin-jwt-secret

# Transfer Token (generar con: openssl rand -base64 32)
TRANSFER_TOKEN_SALT=tu-transfer-token-salt

# Configuración de AWS S3 para uploads
AWS_S3_BUCKET=tu-bucket-s3
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=tu-access-key
AWS_S3_SECRET_ACCESS_KEY=tu-secret-key

